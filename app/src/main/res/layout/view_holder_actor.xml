<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dark_dark_grey">

    <ImageView
        android:id="@+id/actor_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/actor_picture" />

    <TextView
        android:id="@+id/actor_name"
        android:layout_width="0dp"
        android:layout_height="50sp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingTop="6sp"
        app:layout_constraintStart_toStartOf="@+id/actor_picture"
        app:layout_constraintEnd_toEndOf="@+id/actor_picture"
        app:layout_constraintTop_toBottomOf="@+id/actor_picture"
        tools:text="@tools:sample/full_names"
        />

</androidx.constraintlayout.widget.ConstraintLayout>